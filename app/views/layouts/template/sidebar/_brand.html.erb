<!-- Sidebar - Brand -->
<br>
<div class="sidebar-brand d-flex align-items-center justify-content-center mb-3 mt-3">
  <div class="sidebar-brand-icon rotate-n-90">
    <%  if current_user.persona.foto.present?
          @foto_persona = current_user.persona.foto
        else
          @foto_persona = "https://avatars.githubusercontent.com/u/97012106?v=4"
        end %>

    <img class="img-profile rounded-circle" src="<%= @foto_persona %>" style="border: 2px solid white;" width="70" height="70" alt="dfdfdf">
    <br>
    <span class="sidebar-brand-text mx-3" style="font-size: 55%;"><%= current_user.email %></span>

    <% if !current_user_role.blank? %>
      <span class="sidebar-brand-text mx-3" style="font-size: 72%; color: <%= current_user_role_color %>"><%= current_user_role %></span>
    <% end %>
    
  </div>
</div>
<br>