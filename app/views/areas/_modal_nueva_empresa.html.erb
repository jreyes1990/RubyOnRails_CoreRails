<div class="modal-header modal-header-success" style="background-color: #efefef !important;">
  <div class="col-md-12 text-center">
    <h5 class="modal-title" id="myModalLabel">REGISTRAR EMPRESA</h5>
  </div>
</div>

<%= simple_form_for :nueva_empresa_form, :url => {:controller => "areas", :action => "modal_registro_empresa"} do |f| %>
<%= f.error_notification %>

  <div class="card">
    <div class="card-body">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="form-inputs">
              <div class="row">
                <div class="col-md-3"><%= f.input :codigo_empresa, label: "Codigo", input_html: {type: "number"} %></div>
                <div class="col-md-7"><%= f.input :nombre %></div>
                <div class="col-md-2"><%= f.input :codigo_hex, label: "HEX", input_html: { type: "color" } %></div>
              </div>
              <%= f.input :descripcion, as: :text, input_html: {rows: 3} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal-footer modal-header-success" style="background-color: #efefef !important;">
    <div class="col-md-12 text-center">
      <%= button_tag f.submit, class: "btn btn-success btn-sm", data: {controller: 'sweetalert', action: 'click->sweetalert#btnConfirmar',
                                                                                    sweetalert_confirm_alert_value: "Registrar",
                                                                                    sweetalert_cancel_alert_value: "Cancelado",
                                                                                    sweetalert_confirm_title_value: 'Esta seguro de <strong>Registrar?</strong>',
                                                                                    sweetalert_confirm_btn_value: '<i class="fas fa-check-circle"></i> <strong>Si, Registrar</strong>',
                                                                                    sweetalert_cancel_btn_value: '<i class="fas fa-times-circle"></i> <strong>No, Cancelar</strong>',
                                                                                    sweetalert_cancel_title_value: 'Se ha cancelado el evento <strong>REGISTRAR</strong>' } do %>
        <span class="icon text-green-50">
          <i class="fas fa-edit"></i>
        </span>
        <span class="text">REGISTRAR</span>
      <%end%>
      
      <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">
        <span class="icon text-red-50">
          <i class="fas fa-times-circle"></i>
        </span>
        <span class="text">CANCELAR</span>
      </button>
    </div>
  </div>
<% end %>

